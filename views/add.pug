extends layout

block content
  main
    .container.add-item
      form.row.g-3(method='POST', action='/add')
        .col-8
          label.form-label Title
          input#inputName.form-control(name='title', type='text')
        .row
          .col-8
            label.form-label(for='inputGoal') Goals
            textarea#inputGoal.form-control(name='description' placeholder='I would like to...')
        .form-group.row.date
          label.col-2.col-form-label(for='startDate')  Start Date
          .col-6
            input#startDate.form-control(name='start_date' type='date')
        .form-group.row.date
          label.col-2.col-form-label(for='endDate')  End Date
          .col-6
            input#endDate.form-control(name='end_date' type='date')
        .col-md-4
          label.form-label(name='hashtag' for='hashtag') Hashtags
          select#hashtag.form-select
            option(selected='') Select
            option Career
            option Fitness
            option Finance
            option Education
        .col-12
          input.btn.btn-outline-info(type='submit', value='Add Item') 
