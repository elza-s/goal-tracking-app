extends layout

block content
  main
    .container.main-body
      .row.titlebar
        .row
          form.d-flex.col-sm
            input.form-control.me-2(type='search' placeholder='Search' aria-label='Search')
            button.btn.btn-outline-success(type='submit') Search
          .col-sm-2.dropdown
            button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false')
              | Filter
            ul.dropdown-menu(aria-labelledby='dropdownMenuButton')
              li
                a.dropdown-item(href='#') Career
              li
                a.dropdown-item(href='#') Fitness
              li
                a.dropdown-item(href='#') Finance
              li
                a.dropdown-item(href='#') Education

      .sort
        ul.row
          li.col-sm
            | Title 
            i.fas.fa-sort
          li.col-sm-2
            | Time Spend 
            i.fas.fa-sort
          li.col-sm-1
      .items
        ul.row
          li.col-sm Learn React
          li.col-sm-2 5:00
          li.col-sm-1
            i.fas.fa-trash
      .add
        a.btn.btn-outline-info(href='/add' role='button') Add Item
